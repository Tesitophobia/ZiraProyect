    .imguno { top: 20px; left: 57%; width: 69px; transform: rotate(302deg); }
    .imgdos { top: 10px; left: 63%; width: 100px; transform: rotate(335deg); }
    .imgtres { top: 70px; left: 60%; width: 83px; transform: rotate(244deg); }
    .imgcuatro { top: 100px; left: 68%; width: 180px; }
    .imgcinco { top: 60px; left: 79%; width: 180px; }
    .imgseis { top: 210px; left: 79%; width: 180px; }
    .imgsiete { top: 340px; left: 70%; width: 199px; transform: rotate(-2deg); }
    .imgocho { top: 420px; left: 80%; width: 199px; transform: rotate(1deg); }
    .imgnueve { top: 490px; left: 69%; width: 199px; }
    .imgdiez { top: 480px; left: 59%; width: 109px; transform: rotate(327deg); }
    .imgonce { top: 570px; left: 59%; width: 78px; transform: rotate(8deg); }
    .imgdoce { top: 552px; left: 54%; width: 57px; transform: rotate(251deg); }

    .moveable {
        transition: left 0.3s ease, top 0.3s ease;
    }
</style>

<script>
    // Función para mover las imágenes cuando haga scroll
    window.addEventListener('scroll', () => {
        const sc2 = document.querySelector('.sc2');
        const scrolled = window.scrollY;
        const maxScroll = sc2.offsetTop + sc2.offsetHeight - window.innerHeight; // Definir el límite del scroll

        // Establecer las posiciones iniciales y finales de cada imagen
        const positions = {
            imguno: { leftStart: 57, topStart: 20, leftEnd: 5, topEnd: 100 },
            imgdos: { leftStart: 63, topStart: 10, leftEnd: 13, topEnd: 10 },
            imgtres: { leftStart: 60, topStart: 70, leftEnd: 8, topEnd: 10 },
            imgcuatro: { leftStart: 68, topStart: 100, leftEnd: -6, topEnd: -10 },
            imgcinco: { leftStart: 79, topStart: 60, leftEnd: -15, topEnd: 30 },
            imgseis: { leftStart: 79, topStart: 210, leftEnd: -15, topEnd: -100 },
            imgsiete: { leftStart: 70, topStart: 340, leftEnd: -8, topEnd: -280 },
            imgocho: { leftStart: 80, topStart: 420, leftEnd: -15, topEnd: -350 },
            imgnueve: { leftStart: 69, topStart: 490, leftEnd: -7, topEnd: -440 },
            imgdiez: { leftStart: 59, topStart: 480, leftEnd: 11, topEnd: -455 },
            imgonce: { leftStart: 59, topStart: 570, leftEnd: 11, topEnd: -550 },
            imgdoce: { leftStart: 54, topStart: 552, leftEnd: 18, topEnd: -545 },


            
        };

        // Aplicar el movimiento a cada imagen
        for (const imgId in positions) {
            const imgElement = document.getElementById(imgId);
            const position = positions[imgId];
            
            // Calculando el movimiento horizontal (left) y vertical (top) con base al scroll
            let leftPosition = position.leftStart - (scrolled / maxScroll) * (position.leftStart - position.leftEnd);
            let topPosition = position.topStart + (scrolled / maxScroll) * (sc2.offsetHeight - position.topStart - position.topEnd);

            // Aplicar las nuevas posiciones
            imgElement.style.left = `${leftPosition}%`;
            imgElement.style.top = `${topPosition}px`;
        }
    });
</script>